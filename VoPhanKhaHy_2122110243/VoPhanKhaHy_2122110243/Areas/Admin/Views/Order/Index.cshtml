@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<VoPhanKhaHy_2122110243.Context.Order>

@{
    ViewBag.Title = "Order Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý Đơn hàng</h2>

<!-- Thanh tìm kiếm -->
