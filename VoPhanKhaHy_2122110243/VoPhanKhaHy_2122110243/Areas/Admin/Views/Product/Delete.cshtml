@model VoPhanKhaHy_2122110243.Context.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger">Xóa Sản phẩm</h2>

<div class="alert alert-warning">
    <h4><i class="fas fa-exclamation-triangle"></i> Bạn có chắc chắn muốn xóa sản phẩm này không?</h4>
    <p>Hành động này không thể hoàn tác.</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5>Chi tiết Sản phẩm</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Avartar)
            </dt>
            <dd class="col-sm-9">
                <img src="@Url.Content("~/Content/images/items/" + Model.Avartar)" alt="Hình ảnh Sản phẩm" class="img-thumbnail" style="max-width: 150px;" />
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.CategoryId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CategoryId)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.ShortDec)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ShortDec)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Price) $
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.CreatedOnUtc)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CreatedOnUtc)
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    @using (Html.BeginForm("Delete", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />

        <div class="text-center">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Xác nhận Xóa
            </button>
            <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại Danh sách
            </a>
        </div>
    }
</div>