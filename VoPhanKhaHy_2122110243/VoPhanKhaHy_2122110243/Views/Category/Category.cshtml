@model List<VoPhanKhaHy_2122110243.Context.Category>
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content py-5">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-lg-3 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="img-wrap overflow-hidden position-relative" style="height: 200px;">
                            <img src="~/Content/images/category/@item.Avartar" alt="@item.Name"
                                 class="card-img-top h-100 w-100" style="object-fit: cover;">
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title mb-2 text-truncate">
                                <a href="@Url.Action("ProductCategory", "Category", new { id = item.Id }, null)" class="text-decoration-none text-dark">@item.Name</a>
                            </h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->

<style>
    .section-content {
        background-color: #f9f9f9;
    }

    .card {
        border: none;
        border-radius: 8px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        }

    .img-wrap {
        border-radius: 8px 8px 0 0;
        overflow: hidden;
    }

    .card-title a {
        font-weight: bold;
        font-size: 1rem;
    }

        .card-title a:hover {
            color: #007bff;
        }
</style>
